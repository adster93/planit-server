<h1>Proposal</h1>
<div class="main-container">
  <div class="inner-container-column">
    <div class="proposal-detail">
      <h4>Tell us about your qualifications:</h4>
      <p>{{proposal.details}}</p>
    </div>
    <div class="proposal-detail">
      <h4>Your bid:</h4>
      <p>{{proposal.cost_estimate}}</p>
    </div>
    {{#if editable}}
      <button type="button" class="btn btn-default" aria-label="Left Align" onclick="createProposal({{proposal.id}});">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Submit Proposal
      </button>
    {{/if}}
  </div>
</div>
