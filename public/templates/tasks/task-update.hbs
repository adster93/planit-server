<h1>{{title}}</h1>
<form class="main-container">
  <div class="inner-container-column">
    <label>{{planit.title}}</label>
    <div class="planit-dropdown-btn">
      <button class="skill-btn btn btn-custom dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown">
        {{#if skill}}
          {{skill}}
        {{else}}
          Skill
        {{/if}}
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        {{#each skills}}
          <li onclick="selectSkill({{id}});">{{name}}</li>
        {{/each}}
      </ul>
      <input class="skill hidden" type="text" name="skill_id" value="{{task.skill_id}}" />
      <label class="optional-description description-margin hidden" for="description">Description:</label>
      <textarea class="optional-description hidden" name="description" rows="8" cols="40">{{task.description}}</textarea>
    </div>
    <label for="budget">Budget:</label>
    <input class="edit-planit-text" type="number" name="budget" id="budget" value="{{task.budget}}" /><br>
    <label for="head_count">Head Count:</label>
    <input class="edit-planit-text" type="number" name="head_count" id="head_count" value="{{task.head_count}}" /><br>
    <label for="start_time">Start Time:</label>
    <input class="edit-planit-text" type="datetime-local" name="start_time" id="start_time" value="{{startTime}}" /><br>
    <label for="end_time">End Time:</label>
    <input class="edit-planit-text" type="datetime-local" name="end_time" id="end_time" value="{{endTime}}" /><br>
    {{#if update}}
      <input class="btn btn-custom form-submit-btn" type="submit" value="Update" onclick="updateTaskPut(event, {{planit.id}}, {{task.id}});" />
    {{else}}
      <input class="btn btn-custom form-submit-btn" type="submit" value="Create" onclick="createPlanitPost(event, {{planit.id}});" />
    {{/if}}
  </div>
</form>
