<h1>Task Details</h1>
<div class="main-container">
  <div class="inner-container-column">
    {{#if task.description}}
      <div class="task-details">
        <h4>Description:</h4>
        <p>{{task.description}}</p>
      </div>
    {{else}}
      <div class="task_details">
        <h4>Type:</h4>
        <p>{{task.name}}</p>
      </div>
    {{/if}}
    <div class="task-details">
      <h4>Rate:</h4>
      <p>{{task.budget}}</p>
    </div>
    <div class="task-details">
      <h4># Needed:</h4>
      <p>{{task.head_count}}</p>
    </div>
    <div class="task-details">
      <h4>Start Time:</h4>
      <p>{{task.start_time}}</p>
    </div>
    <div class="task-details">
      <h4>End Time:</h4>
      <p>{{task.end_time}}</p>
    </div>
    <button type="button" class="btn btn-custom form-submit-btn" onclick="viewPlanit({{planit.id}});">
      View Planit
    </button>
    {{#if editable}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="updateTask({{planit.id}}, {{task.id}});">
        Edit Task
      </button>
      <button type="button" class="btn btn-danger form-submit-btn" onclick="deleteTask({{planit.id}}, {{task.id}});">
        Jettison Task
      </button>
    {{else}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="createProposal({{task.id}});">
        Submit Proposal
      </button>
    {{/if}}
  </div>
</div>
