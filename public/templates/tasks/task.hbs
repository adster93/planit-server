<h1>Task Details</h1>
<div class="main-container">
  <div class="inner-container-column">
    {{#if task.description}}
      <div class="task-details">
        <h4>Description:</h4>
        <p>{{task.description}}</p>
      </div>
    {{else}}
      <div class="task_details">
        <h4>Type:</h4>
        <p>{{task.name}}</p>
      </div>
    {{/if}}
    <div class="task-details">
      <h4>Rate:</h4>
      <p>{{task.budget}}</p>
    </div>
    <div class="task-details">
      <h4># Needed:</h4>
      <p>{{task.head_count}}</p>
    </div>
    <div class="task-details">
      <h4>Start Time:</h4>
      <p>{{task.start_time}}</p>
    </div>
    <div class="task-details">
      <h4>End Time:</h4>
      <p>{{task.end_time}}</p>
    </div>
    <button type="button" class="btn btn-custom form-submit-btn" onclick="viewPlanit({{planit.id}});">
      Return to Orbit
    </button>
    {{#if editable}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="updateTask({{planit.id}}, {{task.id}});">
        Edit Task
      </button>
      <button type="button" class="btn btn-danger form-submit-btn upper-right-btn" onclick="deleteTask({{planit.id}}, {{task.id}});">
        Eject Task
      </button>
    {{else}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="createProposal({{planit.id}}, {{task.id}});">
        Create Proposal
      </button>
    {{/if}}

    {{#if proposals.length}}
      <h1>Proposals</h1>
      <table class="table table-striped proposals-table">
        <thead>
          <tr>
            <td>TYPE</td>
            <td>|DATE</td>
            <td>|TITLE</td>
            <td>|RATE</td>
            <td>|# NEEDED</td>
            <td>|DESCRIPTION</td>
          </tr>
        </thead>
        <tbody>
        {{#each tasks}}
          <tr>
              {{#compare skill_name 'other'}}
                <td>{{skill_description}}</td>
              {{else}}
                <td>{{skill_name}}</td>
              {{/compare}}
              <td>{{description}}</td>
              <td>{{budget}}</td>
              <td>{{head_count}}</td>
              <td>{{start_time}}</td>
              <td><button class="btn btn-custom" onclick="viewTask({{../planit.id}}, {{id}});">View</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <h1>No Tasks for this Planit</h1>
    {{/if}}

  </div>
</div>
