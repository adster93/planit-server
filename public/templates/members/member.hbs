<div class="member">
  <img src="{{member.profile_image}}" alt="{{member.display_name}} image" />
  <p>{{member.display_name}}</p>
  <p>{{member.bio}}</p>
  {{#compare user.id member.id}}
    <button type="button" class="btn btn-default" onclick="updateMember({{member.id}});">Update My Service Record</button>
  {{else}}
    {{#compare user.role_name 'moderator'}}
      {{#if member.is_banned}}
        <button type="button" onclick="reinstateMember({{member.id}});">Reinstate Crew Member</button>
      {{else}}
        <button type="button" onclick="banMember({{member.id}});">Ban Crew Member</button>
      {{/if}}
    {{/compare}}
  {{/compare}}
</div>
