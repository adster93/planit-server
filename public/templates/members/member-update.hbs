<div class="member">
  <div class="inner-container-column">
    <div class="profile-container">
      <img src="{{member.profile_image}}" alt="{{member.display_name}} image" />
      <p>{{member.display_name}}</p>
    </div>
    <form class="form profile-form" action="/" method="post">
      <div class="form-group">
        <label for="bio">Bio:</label>
        <textarea name="bio" rows="12" cols="50">{{member.bio}}</textarea>
      </div>
      <div class="form-group">
        {{#each skills}}
          {{#if memberHas}}
            <label for="skill_{{id}}">
              <input type="checkbox" id="skill_{{id}}" name="skill_{{id}}" value="{{id}}" checked="checked" />
              {{name}}
            </label>
          {{else}}
            <label for="skill_{{id}}">
              <input type="checkbox" id="skill_{{id}}" name="skill_{{id}}" value="{{id}}" />
              {{name}}
            </label>
          {{/if}}
        {{/each}}
      </div>
      <button type="button" class="btn-custom" onclick="updateMemberPut(event, {{member.id}});">Save</button>
    </form>
  </div>
</div>
