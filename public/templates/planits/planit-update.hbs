
<div class="main-container">
  <h1>{{title}}</h1>
  <div class="inner-container-column">
    <form class="form planit-form">
      <label for="title">Title:</label>
      <input type="text" name="title" value="{{planit.title}}" />
      <div class="planit-dropdown">
        <button class="btn btn-default edit-planit-btn dropdown-toggle" type="button" data-toggle="dropdown">
        {{#if category}}
          {{category}}
        {{else}}
          Category
        {{/if}}
        <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          {{#each planit_types}}
            <li onclick="selectPlanitType({{id}});">{{name}}</li>
          {{/each}}
        </ul>
      </div>
      <input type="text" name="planit_type_id" value="{{planit.planit_type_id}}" />
      <label for="budget">Budget:</label>
      <input type="number" name="budget" value="{{planit.budget}}" />
      <label for="date">Start Date:</label>
      <input type="date" name="start_date" value="{{startDate}}" />
      <label for="date">End Date:</label>
      <input type="date" name="end_date" value="{{endDate}}" />
      <label for="street_address">Street Address:</label>
      <input type="text" name="street_address" value="{{planit.street_address}}"><br>
      <label for="city">City:</label>
      <input type="text" name="city" value="{{planit.city}}" />
      <div class="planit-dropdown">
        <button class="btn btn-default edit-planit-btn dropdown-toggle" type="button" data-toggle="dropdown">
          {{#if planit.state}}
            {{planit.state}}
          {{else}}
            State
          {{/if}}
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          {{#each states}}
            <li onclick="selectState({{@index}});">{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <input class="planit-state hidden" type="text" name="state" value="{{planit.state}}" />
      <label for="zipcode">Zipcode:</label>
      <input type="text" name="zipcode" id="zipcode"  value="{{planit.zipcode}}">
      <label class="description-margin" for="description">Description:</label>
      <textarea name="description" rows="8" cols="40">{{planit.description}}</textarea>

      {{#if update}}
        <input class="btn btn-custom form-submit-btn" type="submit" value="Update" onclick="updatePlanitPut(event, {{planit.id}});" />
      {{else}}
        <input class="btn btn-custom form-submit-btn" type="submit" value="Create" onclick="createPlanitPost(event);" />
      {{/if}}
    </form>
  </div>
</div>
