<h1>planit Details</h1>
<div class="main-container">
  <div class="inner-container-column">
    <div class="planit_details">
      <h4>Title:</h4>
      <p>{{planit.title}}</p>
    </div>
    <div class="planit_details">
      <h4>Category:</h4>
      <p>{{planit.planit_type_name}}</p>
    </div>
    <div class="planit_details">
      <h4>Address:</h4>
      <p>{{planit.street_address}} {{planit.city}}, {{planit.state}} {{planit.zipcode}}</p>
    </div>
    <div class="planit_details">
      <h4>Description:</h4>
      <p>{{planit.description}}</p>
    </div>
    <div class="planit_details">
        <h4>Date:</h4>
        <p>{{planit.start_date}} - {{planit.end_date}}</p>
    </div>
    <div class="planit_details">
        <h4>Budget:</h4>
        <p>{{planit.budget}}</p>
    </div>
    {{#if editable}}
    <button type="button" class="btn btn-custom" onclick="updatePlanit({{planit.id}});">
      Edit
    </button>
    {{/if}}
    <h1>Tasks</h1>
      <table class="table table-striped planits-table">
        <thead>
          <tr>
            <td>TYPE</td>
            <td>|DESCRIPTION</td>
            <td>|RATE</td>
            <td>|# NEEDED</td>
            <td>|START DATE</td>
            <td>|DETAILS</td>
          </tr>
        </thead>
        <tbody>
        {{#each tasks}}
          <tr>
              {{#compare skill_name 'other'}}
                <td>{{skill_description}}</td>
              {{else}}
                <td>{{skill_name}}</td>
              {{/compare}}
              <td>{{description}}</td>
              <td>{{budget}}</td>
              <td>{{head_count}}</td>
              <td>{{start_time}}</td>
              <td><button class="btn btn-custom" onclick="viewTask({{id}});">View</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{#if editable}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="updateTask({{id}})">
        Add A Task
      </button>
    {{/if}}
    {{#if deletable}}
      <button type="button" class="btn btn-danger form-submit-btn" onclick="deletePlanit({{planit.id}});">
        Delete this planit
      </button>
    {{/if}}
  </div>
</div>
